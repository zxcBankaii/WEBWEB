@{
    ViewData["Title"] = "Главная";
}

@model Product 



<form asp-controller="Home" asp-action="UpdateProduct" method="post">
    <h1 class="mt-5">Изменение клиента</h1>
    <input type="text" name="name" class="form-control mt-2" placeholder="" value="@Model.Name" required="">
    <input type="text" name="id" class="form-control mt-2" placeholder="" value="@Model.Id" required="" hidden>
    <input type="text" name="price" class="form-control mt-2" placeholder="" value="@Model.Price" required="">
    <input type="text" name="description" class="form-control mt-2" placeholder="" value="@Model.Description" required="">
    <input type="text" name="idCatygory" class="form-control mt-2" placeholder="Пароль" value="@Model.CategoryId" required="">
    <button class="w-100 btn btn-primary btn-lg mt-2" type="submit">Изменить</button>
</form>